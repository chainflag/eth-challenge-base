service ctf
{
    disable     = no
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = root
    type        = UNLISTED
    port        = 20000
    bind        = 0.0.0.0
    server      = /usr/local/bin/python3
    server_args = /home/ctf/main.py
    flags       = REUSE
    per_source  = 5 # the maximum instances of this service per source IP address
}
